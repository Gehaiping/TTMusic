<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/pop_list_item_playing"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_current_item"
        android:visibility="gone" />

    <TextView
        android:id="@+id/pop_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/pop_list_item_playing"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="260dp"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/pop_list_item_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_music_list_delete"
        android:visibility="visible" />
</RelativeLayout>